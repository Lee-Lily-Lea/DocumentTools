@inject IFolderService FolderService

<MNavigationDrawer App=true
                   Permanent="true"
                   Color="grey lighten-4"
                   Width="@Width">
    <MRow Dense=true Class="pa-1">
        <MCol Cols="12" Class="text-end pb-2">
            <MIcon Small=true Class="ma-2">mdi-refresh</MIcon>
        </MCol>
        <MCol Cols="12" Class="text-center">
            <MAvatar Size="56">
                <MImage Src="https://cdn.masastack.com/stack/images/website/masa-blazor/jack.png" />
            </MAvatar>
        </MCol>
        <MCol Cols="12" >
            <MRow NoGutters=true Align="AlignTypes.Center" Justify="JustifyTypes.Center">
                <img src="assets/img/vip/common.png" height="13" width="35"/>
                <MDivider Vertical=true Class="ma-2" />
                <a><small>开通会员</small></a>
            </MRow>
        </MCol>

        <MCol Cols="12" Class="text-center">
            <div>
                <MButton Depressed=true Color="blue accent-2" Dark=true Width="@("70%")">
                    <MIcon>mdi-plus</MIcon>
                    新建
                </MButton>
            </div>
        </MCol>
    </MRow>

    <MList MinHeight="30" Dense=true>
        <MListItemGroup @bind-Value="_selectedItem" Color="primary">
            <MListItem Dense=true Style="height:30px;min-height:30px;">
                <MListItemIcon Style="height: 12px;">
                    <MIcon Small=true>mdi-home</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>首页</MListItemTitle>
                </MListItemContent>
            </MListItem>

            <MListItem Href="/ai-toolkit" Dense Style="height: 30px; min-height: 30px;">
                <MListItemIcon Style="height: 12px;">
                    <svg t="1713274741146" class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="7648" width="15" height="15">
                        <path d="M153.6 18.2784h530.2784l201.1648 219.4432v768H153.6V18.2784z" fill="#FFFFFF" p-id="7649"></path>
                        <path d="M658.2784 263.3216V69.4784H204.8v885.0432h629.0432v-691.2h-175.5648z m226.7648-25.6v768H153.6V18.2784h530.2784l201.1648 219.4432z m-92.928-25.6l-82.6368-90.112v90.112h82.6368z" fill="#465F78" p-id="7650"></path>
                        <path d="M230.4 768h98.1504l32.1024-105.0624h156.3648L549.12 768h98.0992L497.92 307.2H379.904L230.4 768z m263.424-181.1456H383.8976L437.248 412.5184h3.3792l53.248 174.336zM715.3664 479.3856v288h75.0592V479.3856h-75.0592zM753.0496 442.2656a39.4752 39.4752 0 0 1-28.672-11.776 39.4752 39.4752 0 0 1-11.8272-28.7232c0-11.008 3.8912-20.48 11.776-28.3136a39.168 39.168 0 0 1 28.7232-12.032c11.1616 0 20.6848 4.0448 28.5696 12.032a38.3488 38.3488 0 0 1 11.9808 28.3136 39.168 39.168 0 0 1-11.9808 28.672 38.912 38.912 0 0 1-28.5696 11.776z" fill="#FA7553" p-id="7651"></path>
                    </svg>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>AI工具</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MDivider />
        </MListItemGroup>

        <MListGroup Value="_myFolderExpanded" ValueChanged=OnMyFolderExpandedChanged NoAction=true SubGroup=true PrependIcon="mdi-wallet-bifold" Style="margin-top: 5px;">
            <ActivatorContent>
                <ContextMenuTrigger Data="@null" MenuId="@tableContextMenu">
                    <MListItemContent>
                        <MListItemTitle>我的文件夹</MListItemTitle>
                    </MListItemContent>
                </ContextMenuTrigger>
            </ActivatorContent>
            <ChildContent>
                <MListItemGroup>
                    @foreach (var item in folderItems)
                    {
                        if (item.IsEdit)
                        {
                            <MListItem Dense Style="min-height: 32px">
                                <input autofocus @onblur="() => OnBlurAsync(item)" @bind=@item.Name class="update-name" />
                            </MListItem>
                        }
                        else
                        {
                            <ContextMenuTrigger Data=item MenuId="@tableContextMenu">
                                <MListItem Href="@("/my-folder?folderId=" + item.Id)" Dense Style="min-height: 32px">
                                    <MListItemTitle>@item.Name</MListItemTitle>
                                </MListItem>
                            </ContextMenuTrigger>
                        }
                    }
                </MListItemGroup>
            </ChildContent>
        </MListGroup>
        <MListItem Href="/appman" Dense Style="height: 30px; min-height: 30px;">
            <MListItemIcon Style="height: 12px;">
                <svg t="1713276811004" class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="10639" width="15" height="15">
